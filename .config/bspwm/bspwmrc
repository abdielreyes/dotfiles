#! /bin/bash

pgrep -x sxhkd > /dev/null || sxhkd &

if [[ $(xrandr -q | grep -w 'DP1 connected') ]]; then
    xrandr --output eDP1 --primary --mode 1920x1080 --pos 0x0 --rotate normal --output DP1 --mode 1440x900 --pos 1920x47 --rotate normal 
    bspc monitor eDP1 -d 1 2 3 4 5 
    bspc monitor DP1 -d  6 7 8 9 0
else
    bspc monitor -d 1 2 3 4 5 6 7 8 9 0
fi


bspc config border_width        1
bspc config window_gap          30

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      false
bspc config focus_follows_pointer true
bspc config pointer_modifier super
bspc config pointer_action1 move
bspc config pointer_action2 resize_side
bspc config pointer_action3 resize_corner

xsetroot -cursor_name left_ptr &

touchpad_id=$(xinput -list | sed '/Touchpad/s/.*id=\([0-9]*\).*/\1/;t;d')
echo $touchpad_id
xinput set-prop $touchpad_id 'libinput Tapping Enabled' 1
xinput set-prop $touchpad_id 'libinput Natural Scrolling Enabled' 1


feh --bg-scale /home/abdiel/Pictures/wallpapers/archcomputer_cropped.png
picom &
$HOME/.config/polybar/launch.sh &
#redshift -l 19.432608:-99.133209 &
dunst &
